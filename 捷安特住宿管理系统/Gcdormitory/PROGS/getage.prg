FUNCTION GetAge
LPARAMETERS MBRITH
MY1 = YEAR(MBRITH)
MM1 = MONTH(MBRITH)
MD1 = DAY(MBRITH)
MY2 = YEAR(DATE())
MM2 = MONTH(DATE())
MD2 = DAY(DATE())
IF DATE()-MBRITH<=0
MAGE = 0
ELSE
IF MM2>MM1 .OR. (MM2=MM1 .AND. MD2>=MD1)
MAGE = MY2-MY1
ELSE
MAGE = MY2-MY1-1
ENDIF
ENDIF
IF MAGE>100
MAGE = 0
ENDIF
RETURN MAGE
ENDFUNC
